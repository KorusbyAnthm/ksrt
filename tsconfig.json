{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES2017"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "allowJs": true,
        "removeComments": true,
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "declaration": true,
    },
    "exclude": [
        "./test/**",
        "./dist/**"
    ]
}